<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_title"
        layout="@layout/common_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/shape_corner"
                android:shrinkColumns="1"
                android:stretchColumns="2" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <TextView
                        style="@style/text_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="产品" >
                    </TextView>

                    <EditText
                        android:id="@+id/id_productName"
                        style="@style/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp" >
                    </EditText>
                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_line" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <TextView
                        style="@style/text_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="单价" >
                    </TextView>

                    <EditText
                        android:id="@+id/id_productPrice"
                        style="@style/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp" >
                    </EditText>
                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_line" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <TextView
                        style="@style/text_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="询价人" >
                    </TextView>

                    <EditText
                        android:id="@+id/id_contactor"
                        style="@style/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp" >
                    </EditText>
                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_line" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <TextView
                        style="@style/text_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="电话" >
                    </TextView>

                    <EditText
                        android:id="@+id/id_telephone"
                        style="@style/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp" >
                    </EditText>
                </TableRow>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/gray_line" />

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp" >

                    <TextView
                        style="@style/text_title_style"
                        android:layout_width="wrap_content"
                        android:layout_height="40dip"
                        android:gravity="center_vertical"
                        android:paddingLeft="20dip"
                        android:text="详情" >
                    </TextView>

                    <EditText
                        android:id="@+id/id_remarks"
                        style="@style/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" >
                    </EditText>
                </TableRow>
            </TableLayout>

            <TextView
                style="@style/text_title_style2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="请于下框填写回复信息" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_corner"
                android:shrinkColumns="1"
                android:stretchColumns="2" >

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="15dp" >

                    <EditText
                        android:id="@+id/id_reply"
                        style="@style/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="left|center"
                        android:minLines="5"
                        android:padding="5dip" >
                    </EditText>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>