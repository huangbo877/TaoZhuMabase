<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_weight="0.1"
        android:background="@color/gray_line" />

    <LinearLayout
        android:id="@+id/ll_store_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/g_store_logo"
            android:layout_width="80dip"
            android:layout_height="80dip" />

        <TextView
            android:id="@+id/g_store_name"
            style="@style/text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:text=""
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip" >

        <ImageView
            android:id="@+id/g_image_one"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/icon_empty_photo" />

        <ImageView
            android:id="@+id/g_image_two"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/icon_empty_photo" />

        <ImageView
            android:id="@+id/g_image_three"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/icon_empty_photo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:paddingLeft="5dip"
        android:paddingRight="5dip"
        android:src="@drawable/icon_empty_photo"
        android:paddingBottom="10dip"
         >

        <ImageView
            android:id="@+id/g_image_four"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/icon_empty_photo" />

        <ImageView
            android:id="@+id/g_image_five"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/icon_empty_photo" />

        <TextView
            android:id="@+id/g_image_six"
            style="@style/text_title_style"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:background="@color/gray_line"
            android:gravity="center"
            android:text="查看更多"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>