<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/red"
        android:padding="5.0dip" >

        <Button
            android:id="@+id/btn_head_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back_btn_bg_style"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_head_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="认证系统"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_head_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/no_color"
            android:paddingLeft="15dip"
            android:paddingRight="10dip"
            android:text="确定"
            android:textColor="@color/white"
            android:visibility="visible" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="200dip"
        android:layout_height="200dip"
        android:layout_gravity="center" 
        android:layout_marginTop="15dip">

        <ImageView
            android:id="@+id/img_camera"
            android:layout_width="200dip"
            android:layout_height="200dip"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_default_logo" />

        <ProgressBar
            android:id="@+id/prb_upload"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/img_camera"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_bg" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip" >

        <Spinner
            android:id="@+id/sp_auth_type"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:background="@drawable/shape_corner"
            android:paddingLeft="20dip" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/sp_auth_type"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:src="@drawable/icon_jiantou_down" />
    </RelativeLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="20dip"
        android:text="温馨提示："
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:layout_marginTop="10dip"
        android:text="1.企业认证需上传营业执照"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dip"
        android:text="2.个人认证需上传个人身份证"
        android:textSize="16sp" />

</LinearLayout>