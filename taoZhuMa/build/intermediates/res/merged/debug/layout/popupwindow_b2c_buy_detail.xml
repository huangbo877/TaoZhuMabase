<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg_popupwindow" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dip" >

            <ImageView
                android:id="@+id/im_pop_picture"
                android:layout_width="100dip"
                android:layout_height="100dip" />

            <TextView
                android:id="@+id/tv_pop_tittle"
                style="@style/text_content_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/im_pop_picture"
                android:layout_marginLeft="8dip"
                android:layout_toRightOf="@+id/im_pop_picture"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="2"
                android:padding="2dp" >

                <TextView
                    android:id="@+id/tv_text"
                    style="@style/text_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pop_tittle"
                    android:layout_marginLeft="8dip"
                    android:layout_toRightOf="@+id/im_pop_picture" />

                <TextView
                    android:id="@+id/tv_all_price2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_pop_tittle"
                    android:layout_toRightOf="@+id/tv_text"
                    android:text="Â¥ 79.80"
                    android:textColor="@color/dark_red"
                    android:textSize="16sp" />
            </TextView>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray_line" />

        <TextView
            style="@style/text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="8dp" >

            <ImageButton
                android:id="@+id/imbt_reduce2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_pop_reduce_acount" />

            <EditText
                android:id="@+id/et_acount2"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dip"
                android:background="@color/white"
                android:focusableInTouchMode="false"
                android:gravity="center"
                android:numeric="integer"
                android:text="1"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/imbt_add2"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dip"
                android:background="@drawable/btn_pop_add_acount" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1sp"
            android:layout_alignParentTop="true"
            android:background="@color/gray_line" />

        <Button
            android:id="@+id/btn_confirm2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="5dp"
            android:background="@drawable/buy_confirm" />
    </RelativeLayout>

</RelativeLayout>