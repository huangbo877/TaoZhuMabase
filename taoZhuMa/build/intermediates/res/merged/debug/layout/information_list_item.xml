<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:background="@drawable/shape_corner"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dip" >

        <RelativeLayout
            android:id="@+id/rl_info1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dip" >

            <ImageView
                android:id="@+id/img_image1"
                android:layout_width="match_parent"
                android:layout_height="150dip"
                android:scaleType="fitXY"
                android:src="@drawable/icon_default_logo" />

            <TextView
                android:id="@+id/tv_title1"
                style="@style/information_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_image1"
                android:background="@color/result_view"
                android:padding="5dip"
                android:text="" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lines"
            android:contentDescription="@null" />

        <RelativeLayout
            android:id="@+id/rl_info2"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:padding="5dip" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/img_image2" >

                <TextView
                    android:id="@+id/tv_title2"
                    style="@style/text_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_addtime2"
                    style="@style/text_content_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title2"
                    android:text="" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_image2"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_default_logo" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lines"
            android:contentDescription="@null" />

        <RelativeLayout
            android:id="@+id/rl_info3"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:padding="5dip" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/img_image3" >

                <TextView
                    android:id="@+id/tv_title3"
                    style="@style/text_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_addtime3"
                    style="@style/text_content_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title3"
                    android:text="" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_image3"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_default_logo" />
        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lines"
            android:contentDescription="@null" />

        <RelativeLayout
            android:id="@+id/rl_info4"
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:padding="5dip" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/img_image4" >

                <TextView
                    android:id="@+id/tv_title4"
                    style="@style/text_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_addtime4"
                    style="@style/text_content_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title4"
                    android:text="" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/img_image4"
                android:layout_width="80dip"
                android:layout_height="80dip"
                android:layout_alignParentRight="true"
                android:scaleType="fitXY"
                android:src="@drawable/icon_default_logo" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>