<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_title"
        layout="@layout/common_header" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                android:layout_width="match_parent"
                android:layout_height="10.0dp"
                android:background="#F2F2F2" />

            <com.ruiyu.taozhuma.widget.GridViewForScrollView
                android:id="@+id/gv_comment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:horizontalSpacing="8dp"
                android:listSelector="#00000000"
                android:smoothScrollbar="true"
                android:verticalSpacing="8dp" >
            </com.ruiyu.taozhuma.widget.GridViewForScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F2F2F2"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="@string/test_mj"
                    android:textColor="@color/black" />

                <com.ruiyu.taozhuma.widget.FlexibleRatingBar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rabarServer"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    app:colorFillOff="@color/gray_line"
                    app:colorFillOn="@color/base"
                    app:colorFillPressedOff="@color/gray_line"
                    app:colorFillPressedOn="@color/base"
                    app:colorOutlineOff="@color/transparent"
                    app:colorOutlineOn="@color/transparent"
                    app:colorOutlinePressed="@color/transparent"
                    app:polygonRotation="0"
                    app:polygonVertices="5"
                    app:strokeWidth="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="@string/test_wl"
                    android:textColor="@color/black" />

                <com.ruiyu.taozhuma.widget.FlexibleRatingBar
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rabarServer2"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="5"
                    android:stepSize="1"
                    app:colorFillOff="@color/gray_line"
                    app:colorFillOn="@color/base"
                    app:colorFillPressedOff="@color/gray_line"
                    app:colorFillPressedOn="@color/base"
                    app:colorOutlineOff="@color/transparent"
                    app:colorOutlineOn="@color/transparent"
                    app:colorOutlinePressed="@color/transparent"
                    app:polygonRotation="0"
                    app:polygonVertices="5"
                    app:strokeWidth="5dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:background="@color/gray_line2"
        android:orientation="vertical" >

        <Button
            android:id="@+id/comment_btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/base"
            android:gravity="center"
            android:text="提交评价"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

    

</LinearLayout>