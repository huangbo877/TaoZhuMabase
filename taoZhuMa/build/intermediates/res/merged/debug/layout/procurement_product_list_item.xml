<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backcolor"
        android:gravity="center_vertical"
        android:padding="10dip" >

        <ImageView
            android:id="@+id/img_product_logo"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:scaleType="fitXY"
            android:src="@drawable/icon_default_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/product_name"
                style="@style/text_title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="奥迪滴答滴答滴答滴答滴答滴答滴答滴答滴答滴答" />
 				<TextView
                    android:id="@+id/number"
                    style="@style/text_content_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货号：050687"
                    android:textSize="16sp" 
                    android:layout_marginTop="5dip"
                    android:lines="1"
                    />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:orientation="horizontal"
                 >

                <TextView
                    android:id="@+id/price"
                    style="@style/text_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:text="单价：¥ 99"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                     />
                 <TextView
                    android:id="@+id/quantity"
                    style="@style/text_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="起订量：15件"
                    android:textSize="14sp" />
                
                </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_shoucangxiangq" />
    </LinearLayout>

</LinearLayout>