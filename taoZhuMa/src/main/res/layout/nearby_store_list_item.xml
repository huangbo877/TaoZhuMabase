<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.ruiyu.taozhuma"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.ruiyu.taozhuma.widget.RoundAngleImageView
        android:id="@+id/im_store_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="fitXY"
        android:src="@color/black"
        app:roundHeight="8dp"
        app:roundWidth="8dp" />

    <TextView
        android:id="@+id/tv_store_name"
        style="@style/text_content_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/im_store_logo"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/tv_distance"
        android:layout_toRightOf="@+id/im_store_logo"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="3" />


    <ImageView
        android:id="@+id/grayline"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/im_store_logo"
        android:layout_marginLeft="80dp"
        android:background="@color/gray_line" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/im_store_logo"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_entity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_address"
        android:layout_below="@+id/tv_address"
        android:background="@color/red"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="实体店"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>