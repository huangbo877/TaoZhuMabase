<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/bg_white_gray_corner" >

        <ImageView
            android:id="@+id/im_shoplist"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
             />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/im_shoplist"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="主营:"
            android:textColor="#424242"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/test2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mainCategory"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:text="地址:"
            android:textColor="#353535"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mainCategory"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/test2"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="#353535"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_address"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#ececec" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/iv1"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="-5dp" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:text=""
                android:textColor="#353535"
                android:textSize="15sp" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/image1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/tzm_35" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_mainCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/t1"
            android:layout_alignBottom="@+id/t1"
            android:layout_alignLeft="@+id/tv_address"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="#424242"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>