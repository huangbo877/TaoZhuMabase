<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.ruiyu.taozhuma.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/bg_white_gray_corner"
        android:padding="3dp" >

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="1%w"
            app:layout_heightPercent="96%w"
            app:layout_widthPercent="96%w" />

        <ImageView
            android:id="@+id/iv_toptag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="gone" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/iv_picture"
            android:layout_marginTop="2dp"
            android:background="#ececec" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_picture"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="1111"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:textColor="#FE0000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_sellNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/gray"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_sellNumber"
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_marginTop="3dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_name"
            android:layout_marginRight="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/lijigoumai" />
    </com.ruiyu.taozhuma.widget.PercentRelativeLayout>

</LinearLayout>