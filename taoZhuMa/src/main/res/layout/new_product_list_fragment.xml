<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f8f8" >

    <com.tzm.pulltorefresh.library.PullToRefreshScrollView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ptrf_sv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        ptr:ptrAnimationStyle="flip"
        ptr:ptrDrawableEnd="@drawable/arrownew"
        ptr:ptrDrawableStart="@drawable/arrownew"
        ptr:ptrHeaderBackground="@color/white"
        ptr:ptrHeaderTextColor="@color/black"
        ptr:ptrMode="pullFromStart" >

        <com.ruiyu.taozhuma.widget.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_heightPercent="32%w"
                app:layout_widthPercent="100%w" >

                <com.bigkoo.convenientbanner.ConvenientBanner
                    android:id="@+id/convenientBanner"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_ten"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp" >

                    <ImageView
                        android:id="@+id/iv_ten"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:src="@drawable/tzm_home_02" />
                    <!-- 每日十件 -->

                    <TextView
                        android:id="@+id/tv_ten"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:text="@string/mei_ri_shi_jian"
                        android:textColor="#595757"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp" >

                    <ImageView
                        android:id="@+id/iv_top"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:src="@drawable/tzm_home_03" />
                    <!-- TOP 排行 -->

                    <TextView
                        android:id="@+id/tv_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:text="@string/TOP_pai_hang"
                        android:textColor="@color/base_tttt"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_collect"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp" >

                    <ImageView
                        android:id="@+id/iv_collect"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:src="@drawable/tzm_home_01" />

                    <!-- 钱包专区 -->

                    <TextView
                        android:id="@+id/tv_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:text="@string/qian_bao_zhuan_qu"
                        android:textColor="#595757"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_shop_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:src="@drawable/tzm_home_04" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:text="品牌街"
                        android:textColor="#595757"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_new_product"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="8dp" >

                    <ImageView
                        android:id="@+id/iv_new_product"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="8dp"
                        android:src="@drawable/tzmdpjd" />
                    <!-- 大牌驾到 -->

                    <TextView
                        android:id="@+id/tv_new_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="5dp"
                        android:text="大牌驾到"
                        android:textColor="#595757"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f7f8f8" />

            <com.ruiyu.taozhuma.widget.PercentLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- 限时秒杀 -->

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_heightPercent="50%w" >

                    <ImageView
                        android:id="@+id/im_id807"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/loding_defult" />

                    <com.ruiyu.taozhuma.widget.RushBuyCountDownTimerView
                        android:id="@+id/timeview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:visibility="gone" >
                    </com.ruiyu.taozhuma.widget.RushBuyCountDownTimerView>

                    <TextView
                        android:id="@+id/tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/event_title"
                        android:textColor="@color/base"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/timeview"
                        android:layout_toRightOf="@+id/tv_tip"
                        android:textColor="@color/base"
                        android:textSize="14sp" />
                </RelativeLayout>
                <!-- 限时秒杀 -->

                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    app:layout_heightPercent="50%w"
                    android:background="#f7f8f8" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:layout_heightPercent="50%w"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/im_id808"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:scaleType="fitXY"
                        android:src="@drawable/loding_defult" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#f7f8f8" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/im_id806"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/loding_defult" />

                        <ImageView
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="#f7f8f8" />

                        <ImageView
                            android:id="@+id/im_id423"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/loading_long" />
                    </LinearLayout>
                </LinearLayout>
            </com.ruiyu.taozhuma.widget.PercentLinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/light_gray_bg" />

            <com.ruiyu.taozhuma.widget.PercentLinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_widthPercent="100%sw"
                android:background="@color/white"
                android:gravity="center" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="0dp"
                    app:layout_widthPercent="33%w"
                    android:background="@color/gray_bg2" />

                <ImageView
                    android:id="@+id/te_mai_tu_biao"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="9dp"
                    android:layout_marginTop="9dp"
                    app:layout_heightPercent="5%w"
                    app:layout_marginLeftPercent="2%w"
                    app:layout_widthPercent="4%w"
                    android:padding="1dp"
                    android:src="@drawable/temai" />

                <TextView
                    android:id="@+id/tv_temai2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/te_mai_tu_biao"
                    app:layout_marginLeftPercent="1%w"
                    app:layout_marginRightPercent="1%w"
                    android:text="@string/jrtm"
                    android:textColor="@color/base_ttt"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_temai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/tv_temai2"
                    app:layout_marginRightPercent="2%w"
                    android:text="@string/geng_xin_ti_xing"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/vi_sssa"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginRight="0dp"
                    android:layout_toRightOf="@+id/tv_temai"
                    app:layout_widthPercent="33%w"
                    android:background="@color/gray_bg2" />
            </com.ruiyu.taozhuma.widget.PercentLinearLayout>

            <com.ruiyu.taozhuma.widget.ListViewForScrollView
                android:id="@+id/elistView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="@color/transparent"
                android:divider="@color/transparent"
                android:dividerHeight="0dp" >
            </com.ruiyu.taozhuma.widget.ListViewForScrollView>
        </com.ruiyu.taozhuma.widget.PercentLinearLayout>
    </com.tzm.pulltorefresh.library.PullToRefreshScrollView>

    <ImageView
        android:id="@+id/iv_gotop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:src="@drawable/gotop"
        android:visibility="gone" />

</RelativeLayout>