<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_title"
        layout="@layout/common_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:src="@drawable/tzm30" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#D4D4D4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/tzm28" />

        <TextView
            android:id="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/img"
            android:text="账　号"
            android:textColor="#000000"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/t1"
            android:hint="请输入手机号"
            android:background="@null"
            android:textColor="#000000"
            android:phoneNumber="true"
            android:textColorHint="#C0C0C0"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#D4D4D4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_captcha"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/tzm31" />

        <TextView
            android:id="@+id/tv_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_captcha"
            android:textColor="#000000"
            android:text="验证码"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_captcha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_captcha"
            android:hint="输入验证码"
            android:background="@null"
            android:numeric="integer"
             android:maxLength="10"
            android:textColor="#000000"
            android:textColorHint="#C0C0C0"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_sendCaptcha"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:background="#ffffff"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#bf242a"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#D4D4D4" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/tzm29" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_password"
            android:textColor="#000000"
            android:text="密　码"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_password"
            android:hint="请设置密码（6-16个字符）"
            android:background="@null"
            android:inputType="textPassword"
            android:password="true"
            android:maxLength="16"
            android:textColor="#000000"
            android:textColorHint="#C0C0C0"
            android:layout_marginLeft="10dp"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#D4D4D4" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/tzm29" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_name"
            android:textColor="#000000"
            android:text="密　码"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/et_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_name"
            android:hint="确认新密码"
            android:password="true"
            android:inputType="textPassword"
            android:background="@null"
            android:maxLength="16"
            android:textColor="#000000"
            android:textColorHint="#C0C0C0"
            android:layout_marginLeft="10dp"
            android:textSize="18sp" />
    </RelativeLayout>
    
     <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"
        android:background="#D4D4D4" />
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <Button
        android:id="@+id/bt_getPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/corner_red"
        android:gravity="center"
        android:text="重设密码"
        android:textColor="#ffffff"
        android:textSize="18sp" />

        
    </RelativeLayout>

</LinearLayout>