<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbfaf4"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_title"
        layout="@layout/common_header" />

    <ImageView
        android:id="@+id/grayline1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginTop="10dip"
        android:background="@color/gray_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingTop="8dip"
        android:paddingRight="8dip"
        android:paddingLeft="8dip" >

        <TextView
            android:id="@+id/ia_product_name"
            style="@style/text_contact_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="奥迪双钻陀螺玩具    战斗王2飓风战魂" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="#ffffff"
        android:paddingLeft="8dip"
        android:paddingRight="8dip"
        android:paddingBottom="8dip"
         >

        <TextView
            android:id="@+id/price"
            style="@style/text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="单价 ：¥ "
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/price_num"
            style="@style/text_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/price"
            android:text="590.00"
            android:textColor="@color/red" />

        <TextView
            android:id="@+id/least_order_num"
            style="@style/text_content_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="50件" />

        <TextView
            style="@style/text_content_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/least_order_num"
            android:text="起订量 : " />
    </RelativeLayout>

    <ImageView
        android:id="@+id/grayline1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray_line" />
    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="160dip"
        android:layout_margin="8dip"
        android:background="@drawable/shape_corner"
        android:paddingLeft="10dip" />
    <ImageView 
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_confirm_150_60"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>