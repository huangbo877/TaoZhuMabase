<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:id="@+id/common_title"
        layout="@layout/common_header" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_margin="20dip">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"            
            android:background="@drawable/shape_top_corner_no_bottom_line"
            android:gravity="center">
        <TextView
            android:id="@+id/txt_mobileNum"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center_vertical" 
            android:paddingLeft="20dip"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="">
        </TextView>    
		</TableRow>
		<TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_no_corner_without_bottom"
            android:gravity="center" >       
        <Spinner
            android:id="@+id/sp_type"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center_vertical" 
            android:textSize="16sp"
            android:ems="10"
	        android:paddingLeft="20dip"
            android:background="@null" >
        </Spinner>
        </TableRow>
		<TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_no_corner_without_bottom"
            android:gravity="center" >       
        <EditText
            android:id="@+id/txt_captcha"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:gravity="center_vertical" 
            android:textSize="16sp"
            android:ems="10"
            android:paddingLeft="20dip"
            android:hint="请输入验证码"
            android:background="@null" >
        </EditText>
        </TableRow>
		<TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_no_corner_without_bottom"
            android:gravity="center" >       
        <EditText
            android:id="@+id/txt_passWord"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:gravity="center_vertical" 
            android:textSize="16sp"
            android:ems="10"
            android:paddingLeft="20dip"
            android:hint="请输入密码"
            android:background="@null" >
        </EditText>
        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_bottom_corner_no_top_line"
            android:gravity="center" >       
        <EditText
            android:id="@+id/txt_passWord2"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:inputType="textPassword"
            android:gravity="center_vertical" 
            android:textSize="16sp"
            android:ems="10"
            android:paddingLeft="20dip"
            android:hint="请输入密码"
            android:background="@null" >
        </EditText>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip" 
        android:layout_marginBottom="15dip"       
        android:background="@drawable/btn_green_shape_corner"        
        android:onClick="loginCheck"
        android:text="提    交"
        android:textSize="20sp"
        android:textColor="@color/white" />

   
    
</LinearLayout>