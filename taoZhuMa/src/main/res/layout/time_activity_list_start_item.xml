<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mian"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_width="100dp"
        android:layout_height="100dp" >

        <ImageView
            android:id="@+id/im_product"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/bg_white_gray_corner"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_tag_over"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:src="@drawable/numover" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rl_img"
        android:ellipsize="end"
        android:lines="2"
        android:textColor="@color/tzm_text_gray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_skuvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_product"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rl_img"
        android:textColor="@color/tzm_text_sys_default"
        android:textSize="13sp" />

    <RelativeLayout
        android:id="@+id/rl02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_skuvalue"
        android:layout_marginTop="5dp"
        android:background="@drawable/pink_stroke"
        android:padding="1dp" >

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/progressBarHorizontal_color"
            android:layout_width="90dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_sell_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/tzm_black"
            android:textSize="12sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_buy"
        android:layout_width="92dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl02"
        android:layout_marginTop="5dp"
        android:background="@drawable/pink_solid_corner"
        android:text="@string/activity_bug"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_skuvalue"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/rl_img"
        android:background="@drawable/pink_solid_corner"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tips"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/rl_img"
        android:textColor="@color/base"
        android:textSize="16sp" />

</RelativeLayout>