<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg" >

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:background="@color/white" >

        <Button
            android:id="@+id/btn_head_left"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/icon_back2"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_head_title"
            style="@style/text_title_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="填写物流" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_1"
        android:layout_marginTop="8dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:text="退货地址信息" />

        <View
            android:id="@+id/v_1"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/tv_1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="收 货 人 :"
            android:textColor="@color/text_chesk2" />

        <TextView
            android:id="@+id/tv_return_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_2"
            
            android:textColor="@color/text_chesk2" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="联系电话:"
            android:textColor="@color/text_chesk2" />

        <TextView
            android:id="@+id/tv_phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_3"
            
            android:textColor="@color/text_chesk2" />

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_3"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="退货地址:"
            android:textColor="@color/text_chesk2" />

        <TextView
            android:id="@+id/tv_retrun_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_3"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_4"
            android:paddingBottom="6dp"
            
            android:textColor="@color/text_chesk2" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_2"
        android:layout_marginTop="8dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="物流公司"
            android:textColor="#898989" />

        <TextView
            android:id="@+id/tv_chose_express_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_5"
            android:background="@null"
            android:hint="请选择物流公司"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#C0C0C0"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/sp_logisticsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"                      
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/tv_5"
            android:background="@null"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:id="@+id/v_2"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/tv_5"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:paddingBottom="10dp"
            android:text="物流单号"
            android:textColor="#898989" />

        <EditText
            android:id="@+id/et_input_express_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_2"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_6"
            android:background="@null"
            android:hint="请填写物流单号"
            android:inputType="number"
            android:singleLine="true"
            android:textColor="#000000"
            android:textColorHint="#C0C0C0"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_3"
        android:layout_marginTop="8dp"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="订单信息" />

        <View
            android:id="@+id/v_3"
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/tv_7"
            android:layout_marginTop="5dp"
            android:background="@color/gray_line" />

        <ImageView
            android:id="@+id/iv_show_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/v_3"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:padding="1dp"
            android:background="@drawable/bg_layout_shape2" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_3"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_show_product_image"

            
            android:textSize="14sp" 
            android:textColor="@color/text_chesk2"/>

        <TextView
            android:id="@+id/tv_show_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/v_3"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            
            android:textColor="@color/base"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_show_product_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_show_product_price"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            
            android:textColor="#C0C0C0"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_product_limint_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_name"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/iv_show_product_image"
           
            android:textColor="@color/base"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_product_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_limint_buy"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/iv_show_product_image"
           
            android:textColor="@color/text_chesk2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_product_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_product_limint_buy"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_product_color"
           
            android:textColor="@color/text_chesk2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_show_product_preferential"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_show_product_spec"
            android:layout_marginRight="4dp"
            android:layout_marginTop="6dp"
           
            android:textColor="@color/base"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_show_product_return_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_show_product_preferential"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:paddingBottom="4dp"
          
            android:textColor="@color/base"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_4"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/corner_red"
        android:gravity="center"
        
        android:textColor="#ffffff"
        android:textSize="16sp" />

</RelativeLayout>